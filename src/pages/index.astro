    src:
      local('Jetbrains Mono'),
      url('./fonts/tDbV2o-flEEny0FZhsfKu5WU4xD_OwG_TA.woff2') format('woff2');
    unicode-range: U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
  }

  /* latin-ext */
  @font-face {
    font-family: 'JetBrains Mono';
    font-style: normal;
    font-weight: 200;
