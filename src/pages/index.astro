---
import {Icon} from 'astro-icon/components';

import '../styles/jetbrains-mono.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderText from '../components/HeaderText.astro';
---

<BaseLayout>
  <div class="flex flex-col gap-16">
    <HeaderText />

    <div class="flex flex-col gap-4">
      <h2 class="text-3xl font-bold">social</h2>

      <div class="jetbrains-mono flex flex-wrap items-center gap-4">
        <a
          class="header-link link-hover"
          rel="noopener"
          href="https://github.com/Dafnik"
          target="_blank">
          github <Icon name="social/github" />
        </a>

        <span>/</span>
        <a class="header-link link-hover" href="blog">
          blog <Icon name="blog" />
        </a>

        <span>/</span>
        <a
          class="header-link link-hover"
          rel="me noopener"
          href="https://voi.social/@Dafnik"
          target="_blank">
          mastodon <Icon name="social/mastodon" />
        </a>

        <span>/</span>
        <a
          class="header-link link-hover"
          rel="noopener"
          href="mailto:contact@dafnik.me"
          target="_blank">
          email <Icon name="social/email" />
        </a>

        <span>/</span>

        <a
          class="header-link link-hover"
          rel="noopener"
          href="https://gitlab.com/Dafnik"
          target="_blank">
          gitlab <Icon name="social/gitlab" />
        </a>

        <span>/</span>

        <a class="header-link link-hover" rel="noopener" href="./imprint" target="_blank">
          imprint <Icon name="social/imprint" />
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-16 md:grid-cols-2">
      <div>
        <h2 class="text-3xl font-bold">> project</h2>

        <ol class="jetbrains-mono">
          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://kellner.team">
              kellner.team
            </a>
          </li>
          <li>
            <a class="list-link link-hover" href="#">poweruptime</a>
          </li>
          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://datepollsystems.org">
              DatePollSystems
            </a>
          </li>
          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://datepollsystems.org/projects/datepoll">
              DatePoll
            </a>
          </li>
          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://voi.social">
              voi.social
            </a>
          </li>
        </ol>
      </div>

      <div>
        <h2 class="text-3xl font-bold">< projects</h2>

        <ol class="jetbrains-mono">
          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://npmjs.org/package/dfx-qrcode">
              dfx-qrcode
            </a>
          </li>

          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://npmjs.org/package/dfx-openapi">
              dfx-openapi
            </a>
          </li>
          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://npmjs.org/package/dfx-bootstrap-icons">
              dfx-bootstrap-icons
            </a>
          </li>
          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://npmjs.org/package/dfx-bootstrap-table">
              dfx-bootstrap-table
            </a>
          </li>

          <li>
            <a
              class="list-link link-hover"
              rel="noopener"
              target="_blank"
              href="https://voi.social/@year_progress">
              year progress bot
            </a>
          </li>
        </ol>
      </div>

      <div>
        <h2 class="text-3xl font-bold">other stuff</h2>

        <ol class="jetbrains-mono">
          <li>
            <a class="list-link link-hover" rel="noopener" href="https://status.dafnik.me">
              status monitor
            </a>
          </li>
          <li>
            <a
              class="link-hover list-link"
              rel="noopener"
              target="_blank"
              href="https://releases.datepoll.org">
              releases.datepoll.org
            </a>
          </li>
        </ol>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .list-link {
    @apply relative block whitespace-nowrap text-nowrap break-keep;
    width: 90%;
  }

  .header-link {
    @apply relative inline-flex items-center gap-2 pe-3;
  }

  .link-hover::after {
    content: '';
    background: white;
    mix-blend-mode: exclusion;
    width: calc(100% + 10px);
    height: 0;
    position: absolute;
    bottom: -4px;
    left: -10px;
    transition: all 0.18s cubic-bezier(0.445, 0.05, 0.55, 0.95);
  }

  .link-hover:hover::after {
    height: calc(100% + 8px);
  }

  ol {
    @apply ms-10;

    list-style-type: cjk-ideographic;
  }

  li {
    @apply mt-8;
  }

  body {
    @apply text-2xl;
  }
</style>
