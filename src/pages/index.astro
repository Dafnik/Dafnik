  }

  /* latin-ext */
  @font-face {
    font-family: 'Space Grotesk';
    font-style: normal;
    font-weight: 500;
    font-display: swap;
    src:
      local('Space Grotesk'),
      url('./fonts/V8mQoQDjQSkFtoMM3T6r8E7mF71Q-gOoraIAEj7aUXsqPMBTTA.woff2') format('woff2');
    unicode-range: U+0100-024F, U+0259, U+1E00-1EFF, U+2020, U+20A0-20AB, U+20AD-20CF, U+2113,
      U+2C60-2C7F, U+A720-A7FF;
  }

  /* latin */
  @font-face {
    font-family: 'Space Grotesk';
    font-style: normal;
    font-weight: 500;
    font-display: swap;
    src:
      local('Space Grotesk'),
      url('./fonts/V8mQoQDjQSkFtoMM3T6r8E7mF71Q-gOoraIAEj7aUXskPMA.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC,
      U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  body {
    @apply m-0 bg-black p-0 text-2xl text-white;
  }

  /*noinspection ALL*/
  .rainbow-text {
    background: linear-gradient(to right, red, orange, yellow, green, cyan, blue, violet);
    color: transparent;
    background-clip: text;
    /* Fuck you chrome! https://caniuse.com/?search=background-clip%3A%20webkit */
    -webkit-background-clip: text;
  }

  .jetbrains-mono {
    font-family: 'JetBrains Mono', monospace;
  }

  #nameBig {
    @apply mx-1 text-8xl;

    font-family: 'Space Grotesk', sans-serif;
  }

  .nameMiddle {
    @apply text-5xl;
    font-family: 'Space Grotesk', sans-serif;
  }

  .list-link {
    @apply relative block whitespace-nowrap text-nowrap break-keep;
    width: 90%;
  }

  .header-link {
    @apply relative inline-flex items-center gap-2 pe-3 font-thin;
  }

  .link-hover::after {
    content: '';
    background: white;
    mix-blend-mode: exclusion;
    width: calc(100% + 10px);
    height: 0;
    position: absolute;
    bottom: -4px;
    left: -10px;
    transition: all 0.18s cubic-bezier(0.445, 0.05, 0.55, 0.95);
  }

  .link-hover:hover::after {
    height: calc(100% + 8px);
  }

  ol {
    @apply ms-10;

    list-style-type: cjk-ideographic;
  }

  li {
    @apply mt-8;
  }
</style>

<script>
  const nameBig = document?.getElementById('nameBig');

  if (nameBig) {
    nameBig.classList.remove('rainbow-text');
    if (new Date().getMonth() === 5) {
      nameBig.classList.add('rainbow-text');
    } else {
      const colors = [
        '#AED581',
        '#8BC34A',
        '#1DE9B6',
        '#29B6F6',
        '#40C4FF',
        '#BBDEFB',
        '#42A5F5',
        '#B39DDB',
        '#4DB6AC',
        '#81D4FA',
        '#EF9A9A',
        '#F4FF81',
        '#CCFF90',
        '#FFC107',
        '#FF3D00',
        '#18FFFF',
      ];
      nameBig.style.color = colors[Math.floor(Math.random() * colors.length)];
    }
  }
</script>
