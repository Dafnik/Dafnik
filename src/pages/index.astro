      local('Jetbrains Mono'),
      url('./fonts/tDbV2o-flEEny0FZhsfKu5WU4xD1OwG_TA.woff2') format('woff2');
    unicode-range: U+0100-024F, U+0259, U+1E00-1EFF, U+2020, U+20A0-20AB, U+20AD-20CF, U+2113,
